@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İletişim - Gezi Blogu</title>
    <link rel="stylesheet" href="~/css/contact.css">
    <script src="~/js/contact.js" defer></script>
</head>
<body>
    <header>
        <div class="container">
            <h1>Gezi Blogu</h1>
            <nav>
                <ul>
                    <li><a href="/Home/Index">Anasayfa</a></li>
                    <li><a href="/Basket/BuyTravel">Geziler</a></li>
                    <li><a href="/Home/AboutUs">Hakkımızda</a></li>
                    <li><a href="/Contact/Contact">İletişim</a></li>
                    <li><a href="/Auth/SignOut">Çıkış</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section class="contact">
        <div class="container">
            <h2>İletişim</h2>
            <form asp-action="Contact" method="POST">
                <label for="name">Adınız:</label>
                <input type="text" id="name" name="SendDisplayName" required>

                <label for="subject">Konu:</label>
                <input type="text" id="subject" name="Subject" required>

                <label for="Body">Mesajınız(Mail adresinize belirtiniz.):</label>
                <textarea id="Body" name="Body" required></textarea>

                <button type="submit" id="submitBtn">Gönder</button>
            </form>
        </div>
    </section>

    <footer>
        <div class="container">
            <p>Tüm hakları saklıdır. &copy; 2024 Gezi Blogu</p>
        </div>
    </footer>
</body>
</html>
